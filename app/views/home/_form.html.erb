<% if params[:name] %>
  Thanks for submitting the form!  Here are your answers:<br>
  Name: <%= params[:name] %><br>
  Chocolate? <%= params[:chocolate] ? "Yes!" : "No" %><br>
  Rainbows? <%= params[:rainbows] ? "Yes!" : "No" %><br>
  Puppies? <%= params[:puppies] ? "Yes!" : "No" %><br>
  Cold Hard Cash? <%= params[:cash] ? "Yes!" : "No" %><br>
<% else %>
  <%= form_for(@survey) do |f|%>
    <div>
      Name: <%= text_field_tag :name %>
    </div>
    <div>
      Favorites:<br>
      <%= f.check_box_tag :chocolate %> Chocolate<br>
      <%= f.check_box_tag :rainbows %> Rainbows<br>
      <%= f.check_box_tag :puppies %> Puppies<br>
      <%= f.check_box_tag :cold_hard_cash %> Cold Hard Cash<br>
    </div>
    <div class="actions">
      <%= submit_tag %>
    </div>
  <% end %>
<% end %>
